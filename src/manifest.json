{
  "manifest_version": 2,
  "name": "Prod Guard",
  "description": "Browser extension that lets you know when you're connected to production by giving you a clear visual cue. Never accidentally make changes to production ever again.",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon/dark-icon.svg",
    "theme_icons": [
      {
        "dark": "icon/dark-icon.svg",
        "light": "icon/light-icon.svg",
        "size": 16
      },
      {
        "dark": "icon/dark-icon.svg",
        "light": "icon/light-icon.svg",
        "size": 32
      }
    ]
  },

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],

  "applications": {
    "gecko": {
      "id": "dev-prog-guard-extension@example.com"
    }
  }
}
